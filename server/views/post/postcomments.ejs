<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <%- include('../partials/header') %>
</head>

<body>

    <!-- ======= Header ======= -->
    <%- include('../partials/navbar') %>
        <!-- End Header -->
        <%- include('../partials/modal') %>

            <!-- ======= Sidebar ======= -->
            <%- include('../partials/sidebar') %>
                <!-- End Sidebar-->

                <main id="main" class="main">

                    <div class="pagetitle">
                        <h1>Dashboard</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                                <li class="breadcrumb-item">Category</li>
                            </ol>
                        </nav>
                    </div>
                    <!-- End Page Title -->

                    <section class="section dashboard">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="w-100 py-3 d-flex justify-content-between">
                                            <h5 class="card-title p-0">All Category</h5>
                                            <a href="/admin/create/category" class="btn btn-primary">Add New</a>
                                        </div>
                                        <table id="post-comment-table" class="table datatable">
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Post</th>
                                                    <th scope="col">Comment By</th>
                                                    <th scope="col">Status</th>
                                                    <th scope="col">Date</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%- include('../partials/loader') %>
                                                    <% comments?.forEach((comment,i)=> { %>
                                                        <tr class="table-row">
                                                            <th scope="row">
                                                                <%= i+1 %>
                                                            </th>
                                                            <td>
                                                                <%= comment.post.title %>
                                                            </td>
                                                            <td>
                                                                <%= comment.username %>
                                                            </td>
                                                            <td>
                                                                <label class="switch">
                                                                    <input type="checkbox" <%=comment.status ? 'checked'
                                                                        : '' %>
                                                                    class="status" data-id="<%= comment._id %>" >
                                                                        <span class="slider"></span>
                                                                </label>
                                                            </td>
                                                            <td>
                                                                <%= comment.formattedDate %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-3">
                                                                    <a href='/admin/post/comment/<%= comment._id %>'
                                                                        class="rounded px-3 py-2 bg-blue text-white">
                                                                        <i class="bi bi-eye"></i>
                                                                        View
                                                                    </a>
                                                                    <button type="button" data-id="<%= comment._id %>"
                                                                        data-bs-toggle="modal" data-bs-target=".modal"
                                                                        class="btn btn-danger openModal">
                                                                        <i class="bi bi-trash3"></i>
                                                                        Delete
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                </main><!-- End #main -->

                <!-- ======= Footer ======= -->
                <%- include('../partials/footer') %>
                    <!-- End Footer -->

                    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
                        <i class="bi bi-arrow-up-short"></i>
                    </a>
                    <%- include('../partials/script') %>
                        <script> const EndURL = 'post/comment'; </script>
                        <script async src="/assets/js/index.js" type="module"></script>
</body>

</html>