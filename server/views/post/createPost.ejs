<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dashboard</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <%- include('../partials/header') %>
</head>

<body>

    <!-- ======= Header ======= -->
    <%- include('../partials/navbar') %>
        <!-- End Header -->

        <!-- ======= Sidebar ======= -->
        <%- include('../partials/sidebar') %>
            <!-- End Sidebar-->

            <main id="main" class="main">

                <div class="pagetitle">
                    <h1>Dashboard</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
                            <li class="breadcrumb-item">Create</li>
                        </ol>
                    </nav>
                </div>
                <!-- End Page Title -->

                <section class="section dashboard">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Post</h5>
                                    <form id="submitForm" class="row g-3" enctype="multipart/form-data">
                                        <input type="hidden" id="updateID">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="col-12 mb-2">
                                                    <label for="title" class="form-label">Title</label>
                                                    <input type="text" name="title" class="form-control title"
                                                        autocomplete="off" id="title" placeholder="Enter Title"
                                                        required>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="slug" class="form-label">Slug</label>
                                                    <input type="text" name="post_slug" class="form-control" id="slug"
                                                        autocomplete="off" placeholder="Enter Slug" required>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="postcategory" class="form-label">Category</label>
                                                    <select id="categorySelectBox" class="form-select"
                                                        name="post_category_id" aria-label="Default select example"
                                                        required>
                                                        <option selected="true" disabled>category</option>
                                                        <% categories?.forEach(category=> { %>
                                                            <option value="<%= category._id %>">
                                                                <%= category.category_name %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <label for="Input_img" class="form-label">Image</label>
                                                    <input type="file" name="post_image" class="form-control mb-2"
                                                        id="Input_img">
                                                    <%- include('../partials/alert') %>
                                                </div>
                                                <div class="col-12 mb-2">
                                                    <div class="form-group d-flex flex-column">
                                                        <label for="status" class="form-label">Status</label>
                                                        <label class="switch">
                                                            <input type="checkbox" id="status" class="status" checked>
                                                            <span class="slider"></span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="d-flex flex-column p-3">
                                                    <img src="/assets/images/upload_area.png" id="preview_featured_img"
                                                        style="height: 300px;" alt="upload_area_img"
                                                        class="img-fluid object-fit-contain">
                                                </div>
                                            </div>
                                            <div class="col-12 mt-3">
                                                <div class="card">
                                                    <div class="card-body pt-3">
                                                        <h5 class="form-label">Description</h5>
                                                        <div class="quill-editor-full" id="description" style="height: 300px;">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-2 align-items-center justify-content-center">
                                                <%- include('../partials/formLoader') %>
                                                    <button type="submit"
                                                        class="btn btn-primary submitbtn">Submit</button>
                                                    <button type="reset" class="btn btn-secondary reset">Reset</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </main><!-- End #main -->

            <!-- ======= Footer ======= -->
            <%- include('../partials/footer') %>
                <!-- End Footer -->

                <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
                    <i class="bi bi-arrow-up-short"></i>
                </a>
                <%- include('../partials/script') %>
                    <script>
                        const Formbtn = document.querySelector('#submitForm')
                        const EndURL = 'api/post';
                    </script>
                    <script async src="/assets/js/index.js" type="module"></script>
</body>

</html>